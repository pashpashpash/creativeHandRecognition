{
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "comma-dangle": ["error", {"functions": "never"}],
    "func-names": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": 0,
    "no-nested-ternary": 0,
    "radix": 0,

    // unit tests only
    "max-len" : 0,
    "no-new" : 0,
    "no-unused-expressions": 0,
    "prefer-spread": 0

  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}
